    <artifactId>Java3AT2Q1</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    
    <name>Java3 AT2 Question 1</name>
    <description>This application uses a nested class that shows countries with cities inside.
        These countries are stored in a doubly linked list.</description>
    
    <properties>
        <jar.manifest.mainClass>com.bewsoftware.tafe.java3.at2.q1.App</jar.manifest.mainClass>
        <java.version>16</java.version>
        <javafx.version>16</javafx.version>
        <junit.version>5.8.0-M1</junit.version>
        <source.encoding>UTF-8</source.encoding>
        <javadoc.source.version>${java.version}</javadoc.source.version>
        <jdk.version>${java.version}</jdk.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <project.build.sourceEncoding>${source.encoding}</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${source.encoding}</project.reporting.outputEncoding>
        <javadoc.link.url.jdk>https://docs.oracle.com/en/java/javase/${java.version}/docs/api/</javadoc.link.url.jdk>
        <javadoc.reporting.outputDirectory>${project.reporting.outputDirectory}/apidocs</javadoc.reporting.outputDirectory>
        <skip.unit.tests>true</skip.unit.tests>
    </properties>
        
    <developers>
        <developer>
            <id>bewillcott</id>
            <name>Bradley Willcott</name>
            <email>bw.opensource@yahoo.com</email>
